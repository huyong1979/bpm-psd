   field(EGU,  "um/sqrt(Hz)")
   field(PREC, "3")
}
record(ai,"SR-APHLA{BPM}PSD:$(G)_MEAN_PKS_N_H-P$(N)")
{
   field(DESC,"#$(N) peak")
   field(INP, "SR-APHLA{BPM}PSD:$(G)_MEAN_PKS_N_H-P$(N)_ CP")
